public String extractEcild(String responseBody) {
    String extractedEcild = null;
    try {
        // Splitting the response by commas to get each key-value pair
        String[] pairs = responseBody.split(", ");
        for (String pair : pairs) {
            // Splitting each pair by hyphen to separate key and value
            String[] keyValue = pair.split("-");
            if (keyValue.length == 2 && "enterprisePartyIdentifier".equals(keyValue[0])) {
                extractedEcild = keyValue[1];
                break; // Break the loop once we find the identifier
            }
        }
    } catch (Exception exception) {
        Log.error("Failed to extract ECI ID: {}", exception.getLocalizedMessage());
    }
    return extractedEcild;
}
