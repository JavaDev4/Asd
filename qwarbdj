SELECT 
    sub.column1,
    sub.column2,
    -- Add more columns as needed
    sub.earliest_future_date,
    CASE 
        WHEN sub.earliest_future_date = sub.column1 THEN sub.amount1
        WHEN sub.earliest_future_date = sub.column2 THEN sub.amount2
        -- Repeat for all date and amount pairs
        ELSE 0
    END AS corresponding_amount
FROM (
    SELECT 
        column1,
        column2,
        -- Add more columns as needed
        amount1,
        amount2,
        -- Add more amount columns as needed
        LEAST(
            CASE WHEN column1 > SYSDATE THEN column1 ELSE DATE '9999-12-31' END,
            CASE WHEN column2 > SYSDATE THEN column2 ELSE DATE '9999-12-31' END
            -- Add more date columns as needed
        ) AS earliest_future_date
    FROM 
        your_table
) sub;